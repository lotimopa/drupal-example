services:
  httpd:
    ports:
      - 8000:80

  mailpit:
    ports:
      - 1080:8025
      - 1025:1025

  mysql:
    ports:
      - 3306:3306

  phpmyadmin:
    image: phpmyadmin/phpmyadmin
    container_name: phpmyadmin
    environment:
      MYSQL_ROOT_PASSWORD: root
      MYSQL_USER: drupal
      MYSQL_PASSWORD: drupal
      PMA_ARBITRARY: 1
      PMA_HOST: mysql
    links:
      - mysql:db
    ports:
      - 8080:80
